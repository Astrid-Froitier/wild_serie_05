{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center media text-light">
        <h1 class="mt-0 ">{{ category.name }}</h1>
            {# <p class="">{{ programs.category }}</p> #}
            {# <p class="">Catégorie : {{ programs.category.name }}</p> #}
    </div>
    {% for program in programs %}
    <div class="d-flex justify-content-center">
        <div class="m-5 media-body text-light">
        <a href="{{ path('program_show', {id: program.id }) }}" class="m-5 d-flex justify-content-center text-decoration-none text-light">
            <h1 class="mt-0 ">{{ program.title }}</h1>
        </a>
        <p class="">{{ program.synopsis }}</p>
        </div>
    </div>

    {% endfor %}
    <a href="{{ path('category_index') }}" class="m-5 d-flex justify-content-center">
        Retour à la liste des categories
    </a>
    
{% endblock %}