{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1 class="mb-5 text-light d-flex justify-content-center">Toutes les séries de la table category : </h1>
    {% for category in categories %}
        <div class="">
            <a href="{{ path("category_show", { name: category.name }) }}" class="text-decoration-none">
                <h2 class="text-light ms-3">{{ loop.index }} / {{ category.name }}</h2>
            </a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}" class="d-flex justify-content-center">
        Retour à l'accueil
    </a>
{% endblock %}